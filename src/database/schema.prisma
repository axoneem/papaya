// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider	= "sqlite"
	url			= "file:./zisk.sqlite"
}

model User {
	id			String  @id @default(cuid())
	name		String
  	phoneNumber	String
  	verified	Boolean
  	password	String
}
