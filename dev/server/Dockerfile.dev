FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY packages/papaya-server/package*.json ./

# Install dependencies
RUN npm ci

# Change ownership to node user (which exists in the base image)
RUN chown -R node:node /app

# Switch to node user
USER node

# Expose port
EXPOSE 9475

# Start development server
CMD ["npm", "run", "dev"]
