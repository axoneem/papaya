{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "paths": {
      "@ui/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ], // Or be more specific if needed
  "exclude": [
    "node_modules",
    "dist"
  ],
  "paths": {
    "react": "../node_modules/@types/react",
  }
}