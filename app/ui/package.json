{
  "name": "@zisk/ui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./assets/*": {
      "import": "./dist/assets/*.js",
      "types": "./dist/assets/*.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./constants/*": {
      "import": "./dist/constants/*.js",
      "types": "./dist/constants/*.d.ts"
    },
    "./contexts/*": {
      "import": "./dist/contexts/*.js",
      "types": "./dist/contexts/*.d.ts"
    },
    "./database/*": {
      "import": "./dist/database/*.js",
      "types": "./dist/database/*.d.ts"
    },
    "./hooks/*": {
      "import": "./dist/hooks/*.js",
      "types": "./dist/hooks/*.d.ts"
    },
    "./layouts/*": {
      "import": "./dist/layouts/*.js",
      "types": "./dist/layouts/*.d.ts"
    },
    "./providers/*": {
      "import": "./dist/providers/*.js",
      "types": "./dist/providers/*.d.ts"
    },
    "./schema/*": {
      "import": "./dist/schema/*.js",
      "types": "./dist/schema/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "format": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "format:fix": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss}\""
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.0.1",
    "@mui/icons-material": "^6.4.8",
    "@mui/lab": "^6.0.0-beta.31",
    "@mui/material": "^6.4.8",
    "@mui/x-date-pickers": "^7.28.0",
    "@tanstack/react-query": "^5.69.0",
    "axios": "^1.8.3",
    "chart.js": "^4.4.8",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "file-saver": "^2.0.5",
    "fuse.js": "^7.1.0",
    "jszip": "^3.10.1",
    "nanoid": "^5.1.5",
    "node-vibrant": "^4.0.3",
    "pouchdb": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-hook-form": "^7.54.2",
    "react-window": "^1.8.11",
    "sharp": "^0.33.5",
    "uuid": "^11.1.0",
    "zod": "^3.25.42",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.13.10",
    "@types/pouchdb": "^6.4.2",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "globals": "^15.15.0"
  }
}